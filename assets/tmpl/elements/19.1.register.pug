                    dl
                        dt
                            label.ec-label 電話番号
                        dd
                            .ec-telInput
                                input(type="text")
                                span -
                                input(type="text")
                                span -
                                input(type="text")
                    dl
                        dt
                            label.ec-label メールアドレス
                                span.ec-required 必須
