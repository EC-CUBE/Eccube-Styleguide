mixin ec-headerNav
  +b.ec-headerNav
    +e.item
      a(href="/moc/guest/register")
        +e.I.itemIcon.fas.fa-user
        +e.SPAN.itemLink 新規登録
    +e.item
      a(href="/moc/guest/login")
        +e.I.itemIcon.fas.fa-heart
        +e.SPAN.itemLink お気に入り
    +e.item
      a(href="/moc/guest/login")
        +e.I.itemIcon.fas.fa-lock
        +e.SPAN.itemLink ログイン

mixin ec-headerNavSP
  .ec-headerNavSP
    i.fas.fa-bars

mixin ec-headerUserNav
  +b.ec-headerUserNav
    +e.item
      a(href="/moc/guest/register").ec-icon
        img(src='/moc/icon/user.svg', alt='')
        span マイページ
    +e.item
      a(href="/moc/guest/login").ec-icon
        img(src='/moc/icon/favorite.svg', alt='')
        span お気に入り
    +e.item
      a(href="/moc/guest/login").ec-icon
        img(src='/moc/icon/login.svg', alt='')
        span ログアウト


