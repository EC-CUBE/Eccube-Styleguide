mixin ec-orderRole
  +b.ec-orderRole
    +e.detail
      .ec-orderOrder
        ul.ec-borderedList
          li: .ec-imageGrid
            .ec-imageGrid__img: img(src="http://demo3.ec-cube.net/upload/save_image/0701113537_559351f959620.jpeg")
            .ec-imageGrid__content
              p ホーローマグ
              p ¥ 1,728 x 1
          li: .ec-imageGrid
            .ec-imageGrid__img: img(src="http://demo3.ec-cube.net/upload/save_image/0701113537_559351f959620.jpeg")
            .ec-imageGrid__content
              p ホーローマグ
              p ¥ 1,728 x 1
        .ec-inlineBtn 数量を変更または削除する
      +b.ec-orderAccount
        .ec-rectHeading
          h2 お客様情報
        +e.account
          +e.change
            a.ec-inlineBtn 変更
          p 球部 太郎 様
          p 〒123-1234　東京都千代田区神田神保町1-3-5
          p 000-0000-0000
        +e.account
          p eccube-sample@sample.com
          p ECCUBE株式会社
      .ec-orderDelivery
        .ec-rectHeading
          h2 配送情報
        .ec-orderDelivery__title お届け先
            .ec-orderDelivery__change
              a.ec-inlineBtn 変更
        .ec-orderDelivery__item
          ul.ec-borderedList
            li: .ec-imageGrid
              .ec-imageGrid__img: img(src="http://demo3.ec-cube.net/upload/save_image/0701113537_559351f959620.jpeg")
              .ec-imageGrid__content
                p ホーローマグ
                p ¥ 1,728 x 1
            li: .ec-imageGrid
              .ec-imageGrid__img: img(src="http://demo3.ec-cube.net/upload/save_image/0701113537_559351f959620.jpeg")
              .ec-imageGrid__content
                p ホーローマグ
                p ¥ 1,728 x 1
        .ec-orderDelivery__address
          p 球部 太郎  (キューブ タロウ) 様
          p 〒123-1234 東京都千代田区神田神保町1-3-5
          p 000-0000-0000
        .ec-orderDelivery__actions
          .ec-selects
            .ec-select
              label 配送方法
              select
                option サンプル業者
            .ec-select
              label 配送方法
              select
                option 指定なし
              label お届け時間
              select
                option 指定なし
        .ec-orderDelivery__edit
          a.ec-inlineBtn お届け先を追加する
      .ec-orderPayment
        .ec-rectHeading
          h2 お支払方法
        .ec-blockRadio
          label
            input(type="radio")
            span 郵便振替
          label
            input(type="radio")
            span 現金書留
          label
            input(type="radio")
            span 銀行振込
          label
            input(type="radio")
            span 代金引換
      .ec-orderConfirm
        .ec-rectHeading
          h2 お問い合わせ
        .ec-input
          textarea(rows=6 placeholder="お問い合わせ事項がございましたら、こちらにご入力ください。(3000文字まで)")
    .ec-orderRole__summary
      include /assets/tmpl/elements/7.3.cart.pug
      +ec-totalBox

